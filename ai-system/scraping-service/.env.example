PORT=3000
NODE_ENV=production

# ===========================================
# API SECURITY
# ===========================================
# API key untuk autentikasi dari bot utama
API_KEY=your_secure_api_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://your-bot.vercel.app

# ===========================================
# PROVIDER CONFIGURATION
# ===========================================
# Primary provider untuk auto-routing
PRIMARY_PROVIDER=brave

# Fallback provider
FALLBACK_PROVIDER=copilot

# ===========================================
# RATE LIMITING (milliseconds)
# ===========================================
# Minimum delay antara request ke Brave
BRAVE_RATE_LIMIT=2000

# Minimum delay antara request ke Copilot (lebih lama karena detection)
COPILOT_RATE_LIMIT=5000

# Global rate limit per IP
GLOBAL_RATE_LIMIT_WINDOW_MS=60000
GLOBAL_RATE_LIMIT_MAX=30

# ===========================================
# RETRY CONFIGURATION
# ===========================================
MAX_RETRIES=3
REQUEST_TIMEOUT=45000

# ===========================================
# SESSION MANAGEMENT
# ===========================================
# Rotasi session setelah N requests
SESSION_ROTATION_AFTER=20

# Clear cookies setelah N requests
CLEAR_COOKIES_AFTER=50

# ===========================================
# ANTI-DETECTION
# ===========================================
ENABLE_MOUSE_SIMULATION=true
ENABLE_SCROLL_SIMULATION=true

# Typing delay range (milliseconds)
MIN_TYPING_DELAY=80
MAX_TYPING_DELAY=150

# Action delay range (milliseconds)
MIN_ACTION_DELAY=2000
MAX_ACTION_DELAY=4000

# ===========================================
# PUPPETEER
# ===========================================
# Path ke Chromium (untuk Docker)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Headless mode
PUPPETEER_HEADLESS=true

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
